{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./", // your .ts files live here (can also be "src")
    "outDir": "./dist", // compiled JS output

    /* Environment Settings */
    "target": "ES2020", // modern JS
    "module": "CommonJS", // use CommonJS for Node.js
    "esModuleInterop": true, // allows `import express from "express"`
    "moduleResolution": "Node",

    /* Debugging & Declarations */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "experimentalDecorators": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
